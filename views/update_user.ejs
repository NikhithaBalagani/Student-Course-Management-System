<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Courses</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Course</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="cno" class="text-light">Cno</label>
            <input type="text" name="cno" value="<%= user.cno %>" placeholder="740">
        </div>
        <div class="form-group">
            <label for="course" class="text-light">Course</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="course" value="<%= user.course %>" placeholder="Computer Science">
        </div>
        <div class="form-group">
            <label for="professor" class="text-light">Professor</label>
            <input type="text" name="professor" value="<%= user.professor %>" placeholder="John">
        </div>
        <div class="form-group">
            <label for="grade" class="text-light">Grade</label>
            <input type="text" name="grade" value="<%= user.grade %>" placeholder="A">
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Current" <%= user.status == 'Current' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Current</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Completed" <%= user.status == 'Completed' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Completed</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->